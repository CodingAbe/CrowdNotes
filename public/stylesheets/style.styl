body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  text-align center
a
  color #00B7FF

#header
  outline 1px solid black
  height h = 60px
  padding-top (h / 2) 

#auth
  outline 1px solid black
  height h = 60px
  padding-top (h / 3)
  padding-bottom (h / 6)

.center
  text-align center
  height h = 30px
  padding-top (h / 2)  
  outline 1px solid black

#topOptions, #midOptions
  display inline-block

.hidden
  visibility hidden

